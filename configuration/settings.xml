<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
       <id>nexus-releases</id>
       <username>admin</username>
       <password>admin123</password>
    </server>
    <server>
       <id>nexus-snapshots</id>
       <username>admin</username>
       <password>admin123</password>
    </server>
  </servers>

   <profiles>
    <profile>
      <id>odds-repo</id>
      <repositories>
        <repository>
          <id>odds-releases</id>
          <name>odds releases</name>
          <url>http://nexus3.cicd:8081/repository/maven-releases/</url>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <releases>
            <enabled>true</enabled>
          </releases>
        </repository>
        <repository>
          <id>odds-snapshots</id>
          <name>odds snapshots</name>
          <url>http://nexus3.cicd:8081/repository/maven-snapshots/</url>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </releases>
        </repository>
      </repositories>
    </profile>
  </profiles>
  
  <activeProfiles>
    <activeProfile>odds-repo</activeProfile>
  </activeProfiles>
</settings>

